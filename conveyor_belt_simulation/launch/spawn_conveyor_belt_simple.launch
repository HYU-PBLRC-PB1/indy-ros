<?xml version="1.0" encoding="UTF-8"?>

<launch>
    <arg name = "x" default = "0.0" />
    <arg name = "y" default = "0.0" />
    <arg name = "z" default = "0.0" />
    <arg name = "model_name" default = "conveyor_belt" />

    <param name = "robot_description" command = "$(find xacro)/xacro '$(find conveyor_belt_simulation)/urdf/conveyor_belt_simple.xacro'" />
    <node name = "urdf_spawner" pkg = "gazebo_ros" type = "spawn_model" respawn = "false" output = "screen" args = "-urdf -x $(arg x) -y $(arg y) -z $(arg z) -model $(arg model_name) -param robot_description" />
</launch>