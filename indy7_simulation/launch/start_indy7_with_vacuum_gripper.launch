<?xml version="1.0" encoding="UTF-8"?>

<launch>
	<arg name="verbose" default="true"/>
	<arg name="debug" default="false"/>

    <arg name = "x" default = "0.7" />
    <arg name = "y" default = "-0.7" />
    <arg name = "z" default = "0.0" />

	<!-- startup simulated world -->
	<include file="$(find gazebo_ros)/launch/empty_world.launch">
		<arg name="verbose" value="$(arg verbose)"/>
      	<arg name="debug" value="$(arg debug)"/>
	</include>
	
    <arg name = "xacro_robot_file" default = "$(find indy7_simulation)/urdf/indy7_with_vacuum_gripper.xacro" />
    <arg name = "robot_name" default = "indy7" />
    
    <!-- <param name = "robot_description" command = "cat $(arg urdf_robot_file)" /> -->
    <param name = "robot_description" command = "$(find xacro)/xacro --inorder '$(arg xacro_robot_file)'" />
    <node name = "urdf_spawner" pkg = "gazebo_ros" type = "spawn_model" respawn = "false" output = "screen" args = "-urdf -x $(arg x) -y $(arg y) -z $(arg z) -model $(arg robot_name) -param robot_description" />

	<include file="$(find indy7_simulation)/launch/indy7_controllers.launch"/>
</launch>
