<?xml version="1.0" encoding="UTF-8"?>

<launch>
	<arg name="verbose" default="true"/>
	<arg name="debug" default="false"/>

	<!-- startup simulated world -->
	<include file="$(find gazebo_ros)/launch/empty_world.launch">
		<arg name="verbose" value="$(arg verbose)"/>
      	<arg name="debug" value="$(arg debug)"/>
	</include>
	
	<group ns="robot1">
		<include file="$(find si_simulation)/launch/spawn_indy7_gripper_model.launch">
	        <arg name="model_name" value="robot1" />
	        <arg name="x" value="0.0" />
	        <arg name="y" value="0.0" />
	        <arg name="z" value="0.05" />
	    </include>
		<include file="$(find indy7_simulation)/launch/indy7_controllers.launch">
	        <arg name="model_name" value="robot1" />
	        <arg name="indycb_ip" value="192.168.1.10" />
	        <arg name="robot_name" value="NRMK-Indy7" />
	    </include>
		<include file="$(find vacuum_gripper_simulation)/launch/gripper_controller.launch"/>
	</group>

	<group ns="robot2">
		<include file="$(find si_simulation)/launch/spawn_indy7_gripper_model.launch">
	        <arg name="model_name" value="robot2" />
	        <arg name="x" value="1.0" />
	        <arg name="y" value="1.0" />
	        <arg name="z" value="0.05" />
	    </include>
		<include file="$(find indy7_simulation)/launch/indy7_controllers.launch">
	        <arg name="model_name" value="robot2" />
	        <arg name="indycb_ip" value="192.168.1.20" />
	        <arg name="robot_name" value="NRMK-Indy7" />
	    </include>
		<include file="$(find vacuum_gripper_simulation)/launch/gripper_controller.launch"/>
	</group>

	<group ns="conveyor1">
		<include file="$(find conveyor_belt_simulation)/launch/spawn_conveyor_belt_model.launch">
	        <arg name="x" value="-3" />
	        <arg name="y" value="-3" />
	        <arg name="z" value="0" />
	    </include>
	</group>
</launch>
